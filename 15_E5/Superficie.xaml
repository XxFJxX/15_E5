<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_15_E5.Superficie"
             Title="Superficie">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="num2.jpg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry x:Name="Ba" Placeholder="Ingrese la base"
                   Keyboard="Numeric"/>

            <Entry x:Name="Al" Placeholder="Ingrese la altura"
                   Keyboard="Numeric"/>

            <Label x:Name="la"
                   Text="La superficie del triangulo es "/>

            <Button Text="Listo"
                    Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>