<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_15_E5.Cambio"
             Title="Cambio">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="num1.jpg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry x:Name="Pr" Placeholder="Ingrese la cantidad dada por el cliente "
                   Keyboard="Numeric"/>

            <Entry x:Name="Ca" Placeholder="Ingrese Valor de Producto"
                   Keyboard="Numeric"/>

            <Label x:Name="Cam"
                   Text="Su cambio es de : "/>

            <Button Text="Listo"
                    Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>