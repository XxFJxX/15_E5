<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_15_E5.Gas"
             Title="Gas">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="num4.jpg"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Entry x:Name="G" Placeholder="Ingrese numero de galones"
                   Keyboard="Numeric"/>

            <Entry x:Name="P" Placeholder="Ingrese precio por litro"
                   Keyboard="Numeric"/>

            <Label x:Name="la"
                   Text="Total a pagar : "/>

            <Button Text="Listo"
                    Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>